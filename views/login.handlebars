<div class="login-container">
    <div class="container">
        <form class="login-form">
            <h1 class="form__title">Login</h1>
            <div class="form__message form__message--error"></div>
            <div class="form__input-group">
                <input type="text" class="form__input" id="email-login" autofocus placeholder="Email">
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">
                <input type="password" class="form__input " id="password-login" autofocus placeholder="Password">
                <div class="form__input-error-message"></div>
            </div>
            <button class="form__button" type="submit">Continue</button>
                <p class="form__text"></p>
                <a href="/signup" id="linkCreateAccount" class="form__link">Don't have an account? Create account</a>    
            </div>
        </form>
    </div>
</div>
<script src="./js/login.js"></script>

